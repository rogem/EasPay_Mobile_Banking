<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FacultySignUp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/EditTextFname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="First Name"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/EditTextLname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Last Name"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/EditTextGender"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:hint="Gender"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/EditTextAge"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:hint="Age"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/border"/>

        </LinearLayout>

        <EditText
            android:id="@+id/EditTextEmploeeNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Student ID"
            android:inputType="number"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/EditTextContactNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Contact Number"
            android:maxLength="11"
            android:inputType="number"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/EditTexEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Email"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/EditTexPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FirebaseImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_upload"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Your Student ID"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkboxTermAndCondition"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textColor="#800000"
            android:text=""
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#800000"
            android:text="I agree with the Terms and Condition of EasPay"
            android:textStyle="italic"
            android:onClick="TermsandCondition"
            android:textSize="15dp"
            android:layout_gravity="center"/>


    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="#800000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:onClick="signup"/>
        <EditText
            android:id="@+id/Balance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@null"
            android:visibility="gone"
            android:text="0"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/UserStatus"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@null"
            android:visibility="gone"
            android:text="Student"
            android:textAlignment="center" />
    </LinearLayout>

</ScrollView>